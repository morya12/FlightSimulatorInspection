<UserControl x:Class="FlightSimulatorInspection.Views.GraphsV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulatorInspection.Views"
             xmlns:View="clr-namespace:FlightSimulatorInspection.Views"

             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="350">
  <Grid Background="White">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
        <Border x:Name="GraphABorder" Grid.Row="0" Grid.Column="0"/>
        <Border x:Name="GraphBBorder" Grid.Row="0" Grid.Column="1"/>
        <Border x:Name="RegressionGraphBorder" Grid.Row="1" Grid.ColumnSpan="2" Margin="100,0.333,0,0"/>

    <WrapPanel HorizontalAlignment="Left"  Grid.Row="1" VerticalAlignment="Top">
      <ListBox x:Name="featureListBox" Height="125" Width="100" SelectionChanged="featureListBox_SelectionChanged"/>
    </WrapPanel>

  </Grid>
</UserControl>
