<Page x:Class="FlightSimulatorInspection.Views.LoginV"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlightSimulatorInspection.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginV">

    <Grid>
        <Rectangle Height="280" VerticalAlignment="Top">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF2281D1"/>
                    <GradientStop Color="#FF34268A" Offset="1"/>
                    <GradientStop Color="#FF33288b" Offset="0.5"/>


                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Image Source="/Images/plane.png" Width="70" Height="100" VerticalAlignment="Top" Margin="132,18,131.333,0"/>
        <Rectangle Width="280" Height="240" Fill="White" VerticalAlignment="Bottom" Margin="0,100" RadiusY="19.333" RadiusX="19.333">
            <Rectangle.Effect>
                <DropShadowEffect Color ="#FFBBBBBB" Direction="0" BlurRadius="15" RenderingBias="Quality" ShadowDepth="1"/>
            </Rectangle.Effect>
        </Rectangle>
        <Grid Width="280" Height="240" VerticalAlignment="Bottom" Margin="0,100" >
            <Grid.RowDefinitions>
                <RowDefinition Height="0*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="welcome" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="105,13,104,0" Foreground="Gray" FontSize="18" Grid.ColumnSpan="2" Grid.RowSpan="2" />


            <Button x:Name="b1" Grid.ColumnSpan="2" Content="uploud CSV file" HorizontalAlignment="Center" Margin="20,60,20,0" Grid.RowSpan="2" Width="240" Click="b1_Click" Background="#FFF6F6F6" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"  Foreground="#FF092BB6" RenderTransformOrigin="1,0.5" VerticalAlignment="Top" Height="24"/>
            <Button x:Name="b2" Grid.ColumnSpan="2" Content="uploud XML file" HorizontalAlignment="Center" Margin="20,100,20,0" Grid.RowSpan="2" Width="240" Click="b2_Click" Background="#FFF6F6F6" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"  Foreground="#FF092BB6" RenderTransformOrigin="1,0.5" VerticalAlignment="Top" Height="24"/>



            <ComboBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="20,140,20,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="240"  BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"  Foreground="#FF092BB6" RenderTransformOrigin="1,0.5" Height="24"  IsEditable="True" IsReadOnly="True"  Text="choose algorithm" SelectionChanged="ComboBox_SelectionChanged_1"  >
                <ComboBoxItem Name="algo1" Content="linear regression algorithm" HorizontalAlignment="Center"/>
                <ComboBoxItem Name="algo2" Content="smallest circle algorithm" HorizontalAlignment="Center"/>
            </ComboBox>

        </Grid>
        <Button VerticalAlignment="Bottom"  Margin="0,85" Width="150" Content="START" Click="start_Click" Background="#FF2281D1" Foreground="White" Height="25"  />

    </Grid>
</Page>
